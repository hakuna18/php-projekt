{% extends 'base.html.twig' %}

   
{% block fos_user_content %}
{% endblock fos_user_content %}

{% block title %}
    {% include 'login_panel.html.twig' %}
    {{ 'page.users'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'page.users'|trans }}</h1>
    
    {% if users is defined and users|length %}
        <table class="table table-striped">
            <tbody>
                    <tr>
                        <th style="padding-bottom:20px">{{ 'user.name'|trans }}</th>
                        <th style="padding-bottom:20px">{{ 'user.surname'|trans }}</th>
                        <th style="padding-bottom:20px">{{ 'user.email'|trans }}</th>
                        <th style="padding-bottom:20px">{{ 'user.reservations'|trans }}</th>
                        <th style="padding-bottom:20px">{{ 'user.loans'|trans }}</th>
                    </tr>
                {% for user in users %}
                    
                    <tr>
                       
                        <td style="border-bottom:1px solid black">{{ user.name }}</td>
                        <td style="border-bottom:1px solid black">{{ user.surname }}</td>
                        <td style="border-bottom:1px solid black">{{ user.email }}</td>
                        <td style="border-bottom:1px solid black">{{ user.reservations }}</td>
                        <td style="border-bottom:1px solid black">{{ user.loans }}</td>
                    </tr>             
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}

{% endblock %}
